#include <stdio.h>
#include <stdlib.h>

int sum (int n)
{
    int a = 0;

    int b  = 0;

    if ( n == 0)
        return 0;
    else
        return (n + sum (n - 1));

}

int main()
{

    int n = 0;


    printf ("Enter a number n :\n");


    scanf("%d", &n);


    printf ( " the sum of all the natural numbers from 0 to n equal %d \n", sum(n)  );






    return 0;
}
